# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Sheep pages
GET 	/sheep						controllers.Sheep.index()
POST 	/sheep/:id					controllers.Sheep.show(id: Long)
PUT		/sheep 						controllers.Sheep.add()
PUT		/sheep/:id/edit				controllers.Sheep.edit(id: Long)
DELETE	/sheep/:id/delete			controllers.Sheep.delete(id: Long)

#Event pages
GET		/events						controllers.Events.index()
POST	/events/:id					controllers.Events.show(id: Long)
		

# Admin pages
GET 	/admin						controllers.Admin.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
