# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Sheep pages
GET 	/sheep						controllers.Application.sheep()
POST 	/sheep/:id/					controllers.Application.viewSheep(id: Long)
POST	/sheep 						controllers.Application.newSheep()
POST	/sheep/:id/edit				controllers.Application.editSheep(id: Long)
POST	/sheep/:id/delete			controllers.Application.deleteSheep(id: Long)

#Event pages
GET		/events						controllers.Application.events()
POST	/event/:id/					controllers.Application.viewEvent(id: Long)
		

# Admin pages
GET 	/admin						controllers.Admin.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
